/* pages/02index_assess/index_assess.wxss */
@import '../style/weui.wxss';
.weui-tab__content {
  width: 100%;
  height: 100%;
  font-family: "微软雅黑";
  background: #fff;
}
/* 评价内容 */

.pingjia_title {
  padding: 20rpx 0;
  font-size: 30rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #ccc;
}

.pingjia_main {
  width: 100%;
  height: auto;
  padding-bottom: 100rpx;
}

.pingjia_item {
  height: 100%;
  display: flex;
  padding: 30rpx 0;
  margin: 0 30rpx;
  border-bottom: 1px solid #ccc;
}

.pingjia_item_left {
  width: 120rpx;
  height: 100%;
}

.pingjia_item_left>image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.pingjia_item_img{
  width: 100%;
  display: flex;
}
.pingjia_item_img>image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
}
.pingjia_item_right {
  width: 570rpx;
  height: auto;
}

.pingjia_item_name {
  font-size: 28rpx;
  color: #999;
  
}

.pingjia_item_main {
  width: 100%;
  font-size: 24rpx;
  margin: 10rpx 0;
}

.pingjia_item_time {
  font-size: 22rpx;
  color: #999;
}

