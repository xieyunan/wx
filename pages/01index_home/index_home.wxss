/* pages/01index_home/index_home.wxss */
@import '../style/weui.wxss';
.header{
  width: 100%;
  height: 400rpx; 
  margin-top: 10rpx;
  color: #fff;
  font-size: 28rpx;
  font-family: "微软雅黑";
  background-size: 100% 100%;
}
.header_main{
  position: absolute;
  height: 200rpx;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 100rpx;
}
.header_logo{
  padding-left: 30rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  float: left;
}
.header_logo>image{
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  background: #fff;  
}
.header_name{
  margin-top: 50rpx;
  float: left;
}
.home_name{
  display:flex;
}
.meishihui{
  font-size: 36rpx;
  margin-right: 10rpx;
}
.xingxing>image{
  width: 22rpx;
  height: 22rpx;
  margin-left:6rpx;
  margin-top: 22rpx; 
}
.juli{
  font-size: 24rpx;
  float: right;
  line-height: 24rpx;
  margin: 20rpx 0 0 180rpx;
}
.wifi{
  font-size: 22rpx;
  line-height: 22rpx;
  color: #ff253d;
}
.header_address{
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 28rpx;
}
/* 店铺展示 */
.dianpu_wrap{
  width: 100%;
  height: auto;
  margin-bottom: 10rpx;
  padding-bottom:20rpx; 
  background: #fff;
}
.zhanshi_img{
  display: inline-block;
  width: 232rpx;
  height: 210rpx;
  border-radius: 10rpx;
   
}
.zhanshi{
  padding-left: 20rpx;
  font-size: 32rpx;
  font-family: "微软雅黑";
  font-weight: 500;
  color: #999999;
  line-height: 80rpx;
}
.dianpu_main{
  padding: 0 20rpx;
}
/* 电话地址 */
.address_wrap,.telephone_wrap{
  padding: 30rpx;
  font-size: 32rpx;
  font-family: "微软雅黑";
  font-weight: 500;
  color: #999999;
  height: 40rpx;
  line-height: 40rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.telephone_item{
  float: left;
}
.telephone{
  width: 480rpx;
  color: #000;
  font-size: 26rpx;
  text-indent: 20rpx;
  overflow: hidden;
  white-space:nowrap; 
  text-overflow:ellipsis;
}
.address_wrap>image,.telephone_wrap>image{
  width: 40rpx;
  height: 40rpx;
  float: right;
}
.jianjie_wrap{
  height: auto; 
}
.jianjie_wrap>.telephone_item{
  float: none;
}
.jianjie{
  color: #000;
  font-size: 26rpx;
  padding-left: 50rpx; 
}
.zhizhao>image{
  width: 230rpx;
  height: 230rpx;
  border-radius: 10rpx; 
  margin-right: 10rpx;
}
.zhizhao{
  padding: 0;
  padding-top: 20rpx;
  
}
.zhanshi_main{
  display: flex;
  white-space: nowrap;
  overflow : auto;
}

.img_wrap{
  display: inline-block;
  width: 232rpx;
  height: 210rpx;
  margin-right:6rpx;
}
.jianjie_active{
  background: rgba(230, 230, 230, 0.5);
}