/* pages/00index_search/index_search.wxss */

@import '../style/weui.wxss';
page{
  background-color: rgba(230, 230, 230, 0.5);
  font-family: "微软雅黑";
}
.weui-search-bar{
  background: none;
  border: none;
  padding: 30rpx;
}
.weui-search-bar__form{
  border-radius: 50rpx;
  border: 1px solid #ff253d;
  color: #ff253d;
}
.weui-icon-search_in-box{
  width: 40rpx;
  height: 40rpx;
  top: 18rpx;
}
.weui-search-bar__input{
  padding: 10rpx 0rpx 10rpx 20rpx;
  width: 80%;
}
.weui-search-bar__box{
  width: 100%;
  height: 70rpx;
  padding-right: 0;
  display: flex;
}
.weui-icon-clear{
  top: 10rpx;
  right: 15%;
}
.weui-cells{
  margin-top: 0;
}
.search_btn{
  width: 15%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 6rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 26rpx;
  font-family: "微软雅黑";
  background: #ff253d;
}
.btn_active{
  background: rgba(230, 230, 230, 0.5);
  border: none;
}
.search_history{
  padding: 30rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
}
.history_title{
  font-size: 26rpx;
  line-height: 60rpx;
}
.history_main{
  padding: 10rpx 20rpx;
}
.history_item{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.history_item_main{
  width: 45%;
  height: 70rpx;
  background: #fff;
  text-align: center;
  line-height: 70rpx;
  border: 1px solid #e6e6e6;
  border-radius: 15rpx;
}
.clear_history_main>image{
  width: 40rpx;
  height: 42rpx;
  margin-left: 30rpx;
}
.clear_history{
  position: fixed;
  bottom: 20rpx;
  width: 100%;
}
.clear_history_main{
  padding: 20rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
  color: #ff253d;
}
.clear_active{
  background: #fff;
}