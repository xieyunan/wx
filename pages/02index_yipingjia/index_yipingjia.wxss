/* pages/02index_yipingjia/index_yipingjia.wxss */
@import '../style/weui.wxss';
.xiadan_wrap{
  font-size: 28rpx;
  line-height: 40rpx;
  font-family: "微软雅黑";
  margin-bottom: 120rpx;
}
.xiadan_address,.xiadan_main,.xiadan_beizhu,.xiadan_zhifu{
  margin:10rpx 0;
  background: #fff; 
  padding: 15rpx 25rpx;  
}
.xiadan_address{
  display: flex;
  margin: 0;
  line-height: 50rpx;
  font-size: 26rpx;
}

.item_xinxi,.xiadan_peisong,.xiadan_tejia{
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
  font-size: 26rpx;
}

.address_menu{
  width: 140rpx;
  height: 90rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  
}

.address_main{
  width: 560rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
}
.xiadan_main{
  background: #fff;
}
.xiadan_main_title,.zhifu_title{
  font-size: 32rpx;
  line-height: 55rpx;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #ccc;
}
.xiadan_main_item{
  padding: 15rpx 60rpx;
}
.xiadan_beizhu,.zhifu_mode{
  display: flex;
}
.beizhu_main{
  font-size: 28rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
}

.beizhu{
  line-height: 55rpx;
}
.daifu{
  color: #ff253d;
}
