/* pages/02index_myxinxi/index_myxinxi.wxss */
@import '../style/weui.wxss';
.xinxi_wrap{
  font-family: "微软雅黑";

}
.xinxi_header{
  width: 100%;
  height: auto;
  background: #fff;
  text-align: center;
  padding-top: 60rpx;
  padding-bottom:30rpx; 
  border-bottom: 1px solid #ff253d;
}
.xinxi_img{
  width: 100%;
  height: 120rpx;  
}
.xinxi_img>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;  
}
.xinxi_name{
  line-height: 90rpx;
  font-size: 36rpx;
}

.input_style{
  color: #000;
  font-family: "微软雅黑";
  font-size: 30rpx;
  font-weight: 500;
}
.sex{
  display: flex;
  
}
.man,.woman{
  display: flex;
  position: relative;
  padding-right: 60rpx;
  line-height: 40rpx;
  font-size: 26rpx;  
}
.man>image,.woman>image{
  margin-right:20rpx; 
  width: 40rpx;
  height: 40rpx;  
}
.woman{
  padding: 0;
}
.sex_active{
  color: #000;
}
.sex_active .img_active{
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  background: #01db01;
  border-radius: 50%;
  top: 10rpx;
  left: 10rpx;
  color: #000;
}
.weui-cells{
  margin-bottom: 10rpx;
  
}
.weui-cell__ft{
  font-size: 26rpx;
}
.weui-cell__ft_in-access:after{
  right: 0;
}

.xinxi_btn{
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 20rpx;
  left: 0;
}
.btn{
  margin: 0 20rpx;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  background: #ff253d;
  color: #fff;
  border-radius: 10rpx;
}
.btn_active{
  background: #ccc;
}
.dizhi{
  width: 550rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}