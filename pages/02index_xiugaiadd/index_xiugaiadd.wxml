<view class="address_wrap">
  <view class="old_address" >
    <view class="old">原地址 :</view>
    <view class="old_add">
      <view class="old_addmain">南昌市高新技术产业开发区紫阳大道2999号</view>
      <view class="old_addxx">紫阳明珠B1栋602室</view>
      <view class="old_namephone">
          <view class="phone_name">
            <view class="name_main">
              <view class="">联系人 :</view>
              <view class="name">张三</view>
            </view>
            <view class="name_main">
              <view class="">联系电话 :</view>
              <view class="name">12345678999</view>
            </view>
          </view>
        </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">姓名:</view>
      <view class="weui-cell__ft">
        <input type="text" placeholder="张三" placeholder-class="input-placeholder" />
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">电话:</view>
      <view class="weui-cell__ft">
        <input type="text" placeholder="0" placeholder-class="input-placeholder" />
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">地区:</view>
      <view class="weui-cell__ft">
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="diqu">{{region[0]}}-{{region[1]}}-{{region[2]}}</view>
        
        </picker>

      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">地址:</view>
      <view class="weui-cell__ft">
        <input type="text" placeholder="紫阳大道2999号-紫阳明珠B1栋602室" placeholder-class="input-placeholder" />
      </view>
    </view>
  </view>



  
  <view class="address_btn" hover-class="btn_active" bindtap="baocun">保存</view>
  
</view>
